<% include ../partials/header %>


    <div class="row">
         <h1 style="text-align: center;">Edit <%= Highlight.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
        <form action="/highlights/<%= Highlight._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="Highlight[name]" value="<%= Highlight.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Highlight[image]" value="<%= Highlight.image %>">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Highlight[description]" value="<%= Highlight.description %>">  
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>                
            </div>
        </form>
            <a href="/highlights">Go Back</a>
        </div>
       
    </div>


<% include ../partials/footer %>